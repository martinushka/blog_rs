<h1>Редактирование</h1>
<%= form_for :contact, url: contacts_path(@contact), method: :patch do |f| %>

  <% if @contact && @contact.errors.any? %>
  <p>
  	<%= @contact.errors.full_messages %>
  </p>
  <% end %>

  <p><%= f.label :email %> <br>
  <%= f.text_field :email %></p>

  <p><%= f.label :message %> <br>
  <%= f.text_area :message %></p>

  <p><%= f.submit %></p>
<% end %>